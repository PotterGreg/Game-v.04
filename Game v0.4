<html>
  <head>
    <title> Indiana Jones Text Adventure </title
      <meta http-equiv="Content-Type" 
       content="text/html;charset=utf-8" />
      <script type="text/javascript">
        
        var currLoc = 1;
        var playerScore = 0;
        var hasVisitedRoom1 = false;
        var hasVisitedRoom2 = false;
        var hasVisitedRoom3 = false;
        var hasVisitedRoom4 = false;
        var hasVisitedRoom5 = false;
        var hasVisitedRoom6 = false;
        
        function init() { 
            look();
        }
        
        function dispMsg(msg) { 
        var target = document.getElementById("txtAnswer");
        target.value += msg+"\n";
        }
         
        function playerScoreBox() {
        var scoreCounter = document.getElementById("txtScore");
        scoreCounter.value = playerScore; }
        
        function btnNorth_click() {
          if (currLoc === 1) { 
             currLoc = 2;
             look();
          } else { 
              if (currLoc === 4) { 
                  currLoc=1;
                  look();  
            }   else { 
                  navigationError();
            }
          }
         }
        
        function btnSouth_click() { 
          if (currLoc === 1) { 
             currLoc = 4;
             look();
             } else { 
              if (currLoc===2) { 
                  currLoc = 1;
                  look();
            }   else {
                  navigationError();
              }
            }
          }
    
        function btnEast_click() {
          if (currLoc === 1) { 
             currLoc = 3;
             look();
            }
            else {  
             navigationError();
     }
    }
    
        function btnWest_click() { 
          if (currLoc === 3) { 
             currLoc=1;
             look();
          }
            else { 
              navigationError();
         }
        }
       
       function look() {
        var desc = ""
        switch(currLoc) { 
          case 1: desc = "1. You are standing in a dark cave and you see many torches dimly lit. You hear slithering, you do not like  this. \n";
                  break;
          case 2: desc = "2. \n You enter the cave to the north. You instantly feel a rush of cold air but upon investigation you realize it is just an empty room. \n";
                  break;
          case 3: desc = "3. \n You follow snakes through a small corridor and find yourself in a dead-end.\n";
                  break;
          case 4: desc = "4. \n You pull a lever on the wall and a rock formation unveils a room south of where you started. There is a giant boulder ahead of you. \n";
                  break;
          // case 4: desc = "text1";
                  // break;
          // case 5: desc = "text2";
                  // break;
          default: desc = "You cannot go that way!"
          } 
          playerScoreBox();
          desc = desc+ "\n"
          dispMsg(desc); 
        }
          
        function navigationError() {
          dispMsg("You cannot go that way!")
       }
    </script>
  </head>
<body onload="init();">
  <p style="font-size: 50px; color:Red"> <strong> Adventures of Indiana Jones </strong> </p>  
    
       <img src="http://i.imgur.com/UMKFGWv.png?1" />

      <br> Score:<input type = "text"
            id = "txtScore"
            name="txtScore"> </br>
    
   <p> <textarea rows="10" cols="50" id="txtAnswer">  </textarea> </p> 
   
